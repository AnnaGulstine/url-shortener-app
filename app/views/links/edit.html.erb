<div class="container">

  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@link.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Edit Link for <%= @link.slug %></h3>
    <%= form_tag "/links/#{@link.id}", method: :patch do %>  
    <div class="form-group">
      <%= text_field_tag :slug, "", :placeholder => @link.slug %>  
    </div>
    <div class="form-group">
      <%= text_field_tag :target_url, "", :placeholder => @link.target_url %>  
    </div>  
    <div>
      <%= submit_tag 'Submit Changes', class: "btn btn-default" %>
    </div>
    <% end %>
</div>