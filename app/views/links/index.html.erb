<div class="container">

<h1>Your links</h1>
  <table class="table table-striped table-hover">
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
    <th>Actions</th>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.slug %></td>
        <td><%= link.target_url %></td>
        <td><%= link.created_at %></td>
        <td><%= link_to "Delete", "/links/#{link.id}", :method => "delete", :data => {:confirm => "Are you sure you would like to delete the link: #{link.slug}?"} %></td>
      </tr>
    <% end %>
  </table>

</div>